<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:title="@string/label_option_category_general">

        <CheckBoxPreference
                android:key="settings_auto_connect"
                android:title="@string/label_option_auto_connect"
                android:summary="@string/label_option_auto_connect_summary"
                android:defaultValue="true" />
        
        <EditTextPreference
                android:key="settings_connect_delay"
                android:dependency="settings_auto_connect"
                android:title="@string/label_option_connection_delay"
                android:summary="@string/label_option_connection_delay_summary"
                android:defaultValue="@string/default_option_connection_delay"
                android:inputType="number" />
        
        <CheckBoxPreference
                android:key="settings_show_hashrates"
                android:title="@string/label_option_affix_hashrates_text"
                android:summary="@string/label_option_affix_hashrates_text_summary" 
                android:defaultValue="true"/>
        
        <CheckBoxPreference
                android:key="settings_show_messages_when_parsed"
                android:title="@string/label_option_show_when_parsed"
                android:summary="@string/label_option_show_when_parsed_summary"
                android:defaultValue="false" />
        
        <CheckBoxPreference
                android:key="settings_check_connection_delays"
                android:title="@string/label_option_check_connection_delays"
                android:summary="@string/label_option_check_connection_delays_summary"
                android:defaultValue="true" />

    </PreferenceCategory>
    
    <PreferenceCategory
            android:title="@string/label_option_category_pool">

        <EditTextPreference
                android:key="settings_slushs_account_api_domain"
                android:title="@string/label_slushs_option_site_miner_domain"
                android:summary="@string/label_slushs_option_site_miner_domain_summary"
                android:defaultValue="@string/default_option_slushs_miner_domain" />
        
        <EditTextPreference
                android:key="settings_slushs_block_api_domain"
                android:title="@string/label_slushs_option_site_block_domain"
                android:summary="@string/label_slushs_option_site_block_domain_summary"
                android:defaultValue="@string/default_option_slushs_block_domain" />
        
        <EditTextPreference
                android:key="settings_slushs_api_key"
                android:title="@string/label_option_slushs_api_key"
                android:summary="@string/label_option_slushs_api_key_summary" />

    </PreferenceCategory>
    
    <PreferenceCategory
            android:title="@string/label_option_category_exchange_rate">

        <CheckBoxPreference
                android:key="settings_mtgox_enabled"
                android:title="@string/label_option_exchange_rate_enabled"
                android:summary="@string/label_option_exchange_rate_enabled_summary"
                android:defaultValue="false" />
        
        <EditTextPreference
                android:key="settings_mtgox_fetch_rate"
                android:dependency="settings_mtgox_enabled"
                android:title="@string/label_option_exchange_fetch_rate"
                android:summary="@string/label_option_exchange_fetch_rate_summary"
                android:defaultValue="@string/default_option_exchange_fetch_rate"
                android:inputType="number" />

    </PreferenceCategory>
</PreferenceScreen>
